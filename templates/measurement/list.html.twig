{% extends 'base.html.twig' %}

{% block title %}Measurements{% endblock %}

{% block body %}
    <div class="measurament--section">
        <div class="title">
            <h3>Measurament List</h3>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Year</th>
                    <th>Type</th>
                    <th>Color</th>
                    <th>Varitey</th>
                    <th>Temperature</th>
                    <th>Graduation</th>
                    <th>PH</th>
                    <th>Observations</th>
                    <th>Wine</th>
                </tr>
            </thead>
            <tbody data-controller="measurement">

            </tbody>
        </table>
    </div>
    <div class="sensor--section">
        <div class="title">
            <h3>Sensor List<h/3>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                    <th>Value</th>
                    <th>Type</th>
                </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
    <div class="sensor-form--section">
        <div class="title">
            <h3>Create Sensor</h3>
        </div>
        <form id="sensor-form" data-controller="register-sensor" data-action="register-sensor#submit">
            <label for="inputName">Name:</label>
            <input type="text" name="name" id="inputName" data-register-sensor-target="name" />
            <label for="inputValue">Value:</label>
            <input type="text" name="value"  id="inputValue" data-register-sensor-target="value" />
            <label for="inputSensorType">Sensor Type:</label>
            <select name="type" data-controller="sensor-type" id="inputSensorType" data-register-sensor-target="type">

            </select>
            <button type="submit">Create</button>
            <p data-register-sensor-target="message"></p>
        </form>
    </div>
{% endblock %}